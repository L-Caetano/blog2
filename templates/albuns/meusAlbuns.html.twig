{% extends "base.html.twig" %}
{% block javascripts %}
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

{% endblock %}
{% block body %}
<div class="row"  style="padding-top: 10px">
<div class="col"></div>
 <div class="col-11 shadow p-3 mb-5 bg-white rounded">
    <div class="text-center my-5">
        <h1  class="display-3">Meus álbuns</h1>
    </div>
     {% if app.user.id == album[0].usuario.id or is_granted('ROLE_ADMIN') %}
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
 Criar Novo álbum
</button>
{% endif %}
<hr>
  <div class="row">
<!-- Button trigger modal -->


      <div class="row" style="padding-left:50px;">
    
     {% for albuns in album %}
    
      <div class="col" id="fixed" style="text-align: center;"> 
      
                     <img class="card-2" src="{{ '/uploads/' ~ imagem[albuns.id] }}" width ="450px" height="400px"><hr> 
      <h2><button onclick="deleteButton({{albuns.id}})" class="btn btn-secondary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
</svg></button>&nbsp;&nbsp;<a href="{{ path('album.view', { id: albuns.id }) }}" style="color: #000000; text-decoration: none;" ><b>{{albuns.name}}</b>  </h2>  
                    <br>      
                        </a>
               </div>
                 
            {% endfor %}

     </div>

     </div>
     <div class="containner">
     <div class="row">
     </div>   
          
 <div class="row">
    <div class="col-sm-5">
    </div>
    <div class="col-sm-7">
    <div class="navigation" >
    <br><br>
            {{ knp_pagination_render(album) }}
        </div>
        </div>
        <div class="col-sm-1">
        </div>
        </div>
        </div></div>
        <div class="col"></div>

        </div><!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Novo álbum</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="inputGroup-sizing-default">Nome</span>
  </div>
  <input type="text" class="form-control" id="myInput" aria-label="Default" aria-describedby="inputGroup-sizing-default">
</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-success" onclick="save()">Criar</button>
      </div>
    </div>
  </div>
</div>
<script>
function deleteButton(id){
  console.log(id)
    Swal.fire({
  title: 'Tem certeza?',
  text: "Não será possivel reverter isso!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Sim, delete!',
  cancelButtonText: 'Cancelar'
}).then((result) => {
     $.ajax({
  type: "DELETE",
  url: '{{ path("album.delete")}}',
  data: {
    id: id,
  },
  dataType: 'json',
     success: function(data, status) {         
                   Swal.fire({
                icon: 'success',
                title: 'Album deletado!',
                 text: 'O album foi deleteado com sucesso!'
                }).then((result) =>{
                   window.location.reload()
                })
                  
               },  
               error : function(xhr, textStatus, errorThrown) {  
                 
               Swal.fire({
                icon: 'error',
                title: 'Oops...',
                 text: 'Aconteceu um erro com o servidor!'
                })
               }
});})
}
function save(){

    var str = $("#myInput").val();
  $.post("{{ path("album.create")}}",
  {
    name: str
  },
  function(data, status){
    //alert("Data: " + data + "\nStatus: " + status);
     window.location.reload()
  });
   ;
}
</script>
{% endblock %}
