{% extends 'base.html.twig' %}
{% block body %}
    <div class="jumbotron-img jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Artestilo</h1>
            <p class="lead">Artestilo albuns</p>
        </div>
    </div>
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <button class="btn btn-question">Novos Albuns</button>
            </div>
        </div>

        <div class="row">
            {% for postagem in postagens %}
            <div class="col-6">
                <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                    <div class="q-container p-4">

                        <div class="row">
                            <div class="col-5 text-center">
                                   <div class="card-2">
                                <img src="{{ '/uploads/' ~ postagem.imagem }}" width="200" height="200">
                                </div>
                            </div>
                            <div class="col">
                                <a class="q-title" href="{{ path('blog_postagem.index', { id: postagem.id }) }}"><h2>{{ postagem.titulo }}</h2></a>
                                <div class="q-display p-3">
                                    <i class="fa fa-quote-left mr-3"></i>
                                    <p class="d-inline">{{ postagem.descricao }}</p>
                                    <p class="pt-4"><strong>--{{ postagem.autor }}</strong></p>
                                    <p class="pt-4"> <em>Categoria: {{ postagem.category }}</em></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <a class="answer-link" href="#" style="color: #fff;">
                        <p class="q-display-response text-center p-3">
                            <i class="fa fa-magic magic-wand"></i> 6 answers
                        </p>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}