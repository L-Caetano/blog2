{% extends 'base.html.twig' %}

{% block title %}Logar{% endblock %}

{% block body %}
    <div class="container">
   <div class="row" style="padding-top: 10px">
   <div class="col-sm-2"></div>
    <div class="col-sm-8">
<div class="col-sm-10">
<div  class="shadow p-3 mb-5 bg-white rounded">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
           Você já está logado como: {{ app.user.username }}, <a href="{{ path('app_logout') }}">Sair</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Seja bem vindo!</h1>
    <label for="inputUsername">Nome de usuario </label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
    <label for="inputPassword">Senha</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <br>
    <div class="row"> 
    <div class ="col">
    <button class="btn btn-lg btn-primary" type="submit">
Entrar    </button> 
</div>
<div class ="col"></div>
<div class ="col">
    <a href="{{ path('register') }}" class="btn btn-lg btn-primary" style="color: white; ">Registrar-se</a>
</div>
</div>
</form></div></div>
    </div>
</div></div>
{% endblock %}
